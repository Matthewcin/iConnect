<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Modo Administrador - Agregar Item</title>
</head>
<body>
    <h1>Agregar Item</h1>

    <!-- Formulario para agregar un nuevo ítem -->
    <form method="POST" action="<?php echo BASE_URL; ?>agregar-item">
        <!-- Campo para el modelo del ítem -->
        <label>Modelo:</label>
        <input type="text" name="modelo" required>
        <br>

        <!-- Campo para el precio -->
        <label>Precio:</label>
        <input type="number" step="0.01" name="precio" required>
        <br>

        <!-- Campo para la descripción -->
        <label>Descripción:</label>
        <textarea name="descripcion" required></textarea>
        <br>

        <!-- Selección de la categoría a la que pertenece el ítem -->
        <label>Categoría:</label>
        <select name="categoria_id" required>
            <!-- Iteramos sobre las categorías que fueron pasadas desde el controlador -->
            <?php foreach ($categorias as $categoria): ?>
                <option value="<?php echo $categoria['id']; ?>">
                    <?php echo $categoria['nombre']; ?>
                </option>
            <?php endforeach; ?>
        </select>
        <br>

        <!-- Botón para enviar el formulario -->
        <button type="submit">Agregar</button>
    </form>

    <!-- Enlace para volver al listado de ítems -->
    <a href="<?php echo BASE_URL; ?>listar-item">Volver al listado</a>
</body>
</html>
